<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://jandalhuysen.github.io/tailwindcss.js"></script>
    <title>Sign Up</title>
  </head>
  <body>
    <form action="/signup" method="post">
      <div class="flex justify-center h-screen bg-gray-800">
        <div class="bg-gray-900 h-1/3 w-1/2 mt-12">
          <div>
            <p
              class="flex font-mono font-family: consolas text-blue-300 justify-center py-6"
            >
              Name
            </p>
          </div>
          <div class="flex justify-center">
            <input class="px-2" type="text" name="name" />
          </div>
          <div>
            <p
              class="flex font-mono font-family: consolas text-blue-300 justify-center py-6"
            >
              Surname
            </p>
          </div>
          <div class="flex justify-center">
            <input class="px-2" type="text" name="surname" />
          </div>
          <div class="flex justify-center">
            <button
              class="flex font-mono font-family: consolas text-blue-300 justify-center py-12 hover:text-gray-300"
              type="submit"
            >
              Submit
            </button>
          </div>
        </div>
      </div>
    </form>
  </body>
</html>
